/* 黑色 */
$color-black:#000000;
/* 白色 */
$color-white:#ffffff;

/* 背景色 */
// 基础背景色
$color-bg-base:#f8f8f8;

/* 主题色 */
$color-primary: #2979ff;
$color-primary-light: #ecf5ff;
$color-primary-dark: #2b85e4;
$color-primary-disabled: #a0cfff;

// 警告色
$color-warning: #ffb623;
$color-warning-light: #fcf4e5;
$color-warning-dark: #df9220;
$color-warning-disabled: #fbdd95;

// 成功色
$color-success: #19be6b;
$color-success-light: #dbf1e1;
$color-success-dark: #18b566;
$color-success-disabled: #71d5a1;

// 错误色
$color-error: #fa3534;
$color-error-light: #fef0f0;
$color-error-dark: #dd6161;
$color-error-disabled: #fab6b6;

// 信息色
$color-info: #909399;
$color-info-light: #f4f4f5;
$color-info-dark: #82848a;
$color-info-disabled: #c8c9cc;

/* 文字色 */
// 主要文字颜色
$color-text-primary:#303133;
// 常规文字颜色
$color-text-regular:#606266;
// 次要文字颜色
$color-text-secondary:#909399;
// 占位文字颜色
$color-text-placeholder:#C0C4CC;

/* 边框色 */
// 一级边框颜色
$color-border-base:#DCDFE6;
// 二级边框颜色
$color-border-light:#E4E7ED;
// 三级边框颜色
$color-border-lighter:#EBEEF5;
// 四级边框颜色
$color-border-extra-light:#F2F6FC;

/* 阴影 */
$box-shadow-base: 0 4rpx 8rpx rgba(0, 0, 0, .12),
0 0 12rpx rgba(0, 0, 0, .04);
$box-shadow-dark: 0 4rpx 8rpx rgba(0, 0, 0, .12),
0 0 12rpx rgba(0, 0, 0, .12);
$box-shadow-light: 0 4rpx 24rpx 0 rgba(0, 0, 0, 0.1);