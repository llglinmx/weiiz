<template>
	<view class="popup-box" :class="visible?'popup-box-open':''" @click="cancel">
		<view class="popup-box-main" :class="visible?'popup-box-main-open':''" @click.stop="prevent">
			<view class="popup-box-head">
				<text class="cancel" @click="cancel">取消</text>
				<text class="confirm" @click="confirm">确定</text>
			</view>
			<view class="popup-box-content">
				<picker-view :indicator-style="indicatorStyle" :value="value" @change="bindChange" class="picker-view">
					<picker-view-column>
						<view class="item" v-for="(item,index) in dataList" :key="index">{{item.name||item}}</view>
					</picker-view-column>
				</picker-view>
			</view>
		</view>
	</view>
</template>

<script>
	export default {
		name: "popup-list-select",
		data() {
			return {
				indicatorStyle: `height: 80rpx;`,
				value: [0],
				index: 0,
				data:'',
				arrData:[]
			};
		},
		props: {
			visible: {
				type: Boolean,
				default: false
			},
			dataList: {},
			skid: {
				type: [String, Number],
				default: ''
			},
			title: {

			}
		},
		watch:{
			dataList:{
				handler(newVal) {
					this.arrData = newVal
				}
			},
			skid: {
				handler(newVal) {
					if (newVal!= '') {
						this.value = []
						this.arrData.forEach((item, index) => {
							if (item.id == newVal) {
								this.value.push(index)
								this.index = index
							}
						})
					}
				},
			},
		},
		
		methods: {
			bindChange(e) {
				this.index = e.detail.value[0]
			},
			// 取消
			cancel() {
				this.$emit("cancel", false)
			},
			// 确定
			confirm() {
				this.$emit('confirm', this.dataList[this.index])
				this.cancel()
			},

			prevent() {},
		}
	}
</script>

